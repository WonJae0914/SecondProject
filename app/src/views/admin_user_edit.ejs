<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Document</title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
		integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>

<body>
	<div class="container">
		<form action="/admin/user/edit?_method=PUT" method="POST" id="form1">

			<img src="https://via.placeholder.com/150" alt="Profile Picture">
			<h1>
				<%=data.id%>
			</h1>
			<div class="info">
				<input type="text" name="id" value="<%=data._id%>" style="display:none;">
				<div class="form-group">
					<label for="email">email:</label>
					<input type="text" name="email" id="email" class="form-control" value="<%=data.email%>">
				</div>
				<div class="form-group">
					<label for="age">나이:</label>
					<input type="number" name="age" id="age" class="form-control" value="<%=data.age%>">
				</div>
				<div class="form-group">
					<label for="gender">성별:</label>
					<input type="text" name="gender" id="gender" class="form-control" value="<%=data.gender%>">
				</div>
				<div class="form-group">
					<label for="country">국가:</label>
					<input type="text" name="country" id="country" class="form-control" value="<%=data.country%>">
				</div>
				<div class="form-group">
					<label for="is-opted-in">광고동의:</label>
					<input type="text" name="opt" id="is-opted-in" class="form-control" value="<%=data.isOptedIn%>">
				</div>
			</div>
			<div class="text-center" id="button">

				<button type="submit" class="btn btn-success me-3">확인</button>
				<button class="btn btn-danger me-3">탈퇴</button>
			</div>
		</form>
	</div>
	
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
		integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
		crossorigin="anonymous"></script>
	<script src="https://code.jquery.com/jquery-3.6.3.min.js"></script>
	<script>
		let form = document.querySelector('#form1');
		form.addEventListener('submit', function (event) {
			let email = document.querySelector('#email').value;
			let age = document.querySelector('#age').value;
			let gender = document.querySelector('#gender').value;
			let country = document.querySelector('#country').value;
			let opt = document.querySelector('#is-opted-in').value;
			console.log(email);
			var emailReg = /^[a-zA-Z0-9+-\_.]+@[a-zA-Z0-9-]+\.[a-zA-Z0-9-.]+$/;
			console.log(email);
			if (!emailReg.test(email)||!email) {
				alert("올바른 이메일 형식을 작성하세요");
				event.preventDefault();
			} else if (!age) {
				alert("나이를 선택하세요");
				event.preventDefault();
			}
			else if (!gender) {
				alert("성별을 선택하세요");
				event.preventDefault();
			}
			else if (!country) {
				alert("국가를 선택하세요");
				event.preventDefault();
			}
			else if (!opt) {
				alert("광고동의를 선택하세요");
				event.preventDefault();
			}
			else {
				alert("수정이 완료되었습니다.");
			}
		});
	</script>

</body>

</html>