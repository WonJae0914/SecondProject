<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>관리자페이지</title>

  </head>
  <body>
    <header>
      <h1 class="header__title">관리자 게시판</h1>
    </header>

    <nav class="nav">
      <ul class="nav__list">
        <li class="nav__item">
          <a href="#" class="nav__link">home</a>
        </li>
        <li class="nav__item">
          <a href="#" class="nav__link">Upload</a>
        </li>
        <li class="nav__item">
          <a href="#" class="nav__link">Qna</a>
        </li>
      </ul>
    </nav>
  
    <table class="table">
        <thead>
          <tr>
            <th >글번호</th>
            <th >제목</th>
            <th >날짜</th>
          </tr>
        </thead>
        <tbody>
         <% for(var i=0; i < posts.length; i++){ %>
          <tr>
            <th ><%= posts[i]._id %></th>
            <td> <a href="detail/<%= posts[i]._id %>"><%= posts[i].제목 %></a></td>
            <td><%= posts[i].작성날짜 %></td>
          </tr>
          <% } %>
          
        </tbody>
      </table>
  </body>
</html>