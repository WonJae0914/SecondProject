<%- include('admin_nav.ejs')%>
  <table class="table table-hover w-75 caption-top mb-3" style="margin-left: auto; margin-right: auto;">
    <caption class="mb-3">
      <h2>검색 목록</h2>
    </caption>
    <thead class="table-dark">
      <tr>
        <th scope="col">글번호</th>
        <th scope="col">제목</th>
        <th scope="col">날짜</th>
        <th scope="col">작성자</th>
      </tr>
    </thead>
    <tbody>
      <% for(var i=0; i < posts.length; i++){ %>
        <tr>
          <th scope="row">
            <%= posts[i]._id %>
          </th>
          <td><a href="/admin/detail/<%= posts[i]._id %>">
              <%= posts[i].제목 %>
            </a></td>
          <td>
            <%= posts[i].작성날짜 %>
          </td>
          <td>군침이싹</td>
        </tr>
        <% } %>
    </tbody>
  </table>
    <ul class="pagination justify-content-center">
      <%if(startPage>1){%>
        <li class="page-item"><a class="page-link" href="<%=startPage-1%>">prev</a></li>
        <%}%>
        <% if(endPage> total) {%>
        <% max=total%max %>
        <%}%>
        <% for(var i=0; i<max; i++ ) {%>
          <%if(startPage+i===currentPage){%>
          <li class="page-item active"><a class="page-link" href="<%=startPage+i%>?value=<%=value%>">
          <%}else{%>
          <li class="page-item"><a class="page-link" href="<%=startPage+i%>?value=<%=value%>">
          <%}%>
        <%=startPage+i%></a></li>
        <%}%>
        <% if(startPage+max>5) {%>
        <li class="page-item"><a class="page-link" href="<%=startPage+max%>">next</a></li>
        <%}%>
    </ul>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.js"></script>
    </body>

    </html>