<%- include('admin_nav.ejs') %>
    <div class="container py-5">
        <div class="card mx-auto" style="max-width: 800px;">
            <div class="card-body">
                <div class="d-flex justify-content-center mb-4">
                    <img src="https://via.placeholder.com/150" alt="Profile Picture" class="rounded-circle shadow">
                </div>
                <h1 class="text-center"><%=data.id%></h1>
                <hr>
                <div class="mb-3">
                    <span class="fw-bold me-2">회원번호:</span><%=data._id%>
                </div>
                <div class="mb-3">
                    <span class="fw-bold me-2">Email:</span> <%=data.email%>
                </div>
                <div class="mb-3">
                    <span class="fw-bold me-2">생년월일:</span>
                    <%=data.birthday.year%>년
                    <%=data.birthday.month%>월
                    <%=data.birthday.day%>일
                </div>
                <div class="mb-3">
                    <span class="fw-bold me-2">성별:</span><%=data.gender%>
                </div>
                <div class="mb-3">
                    <span class="fw-bold me-2">국가:</span><%=data.country%>
                </div>
                <div class="mb-3">
                    <span class="fw-bold me-2">광고동의:</span><%=data.isOptedIn%>
                </div>
                <div class="mb-3">
                    <span class="fw-bold me-2">탈퇴여부:</span>
                    <%if(data.delete===true){%>
                        탈퇴
                        <%}else{%>
                        가입
                        <%}%>
                </div>
                <div class="mb-3">
                    <span class="fw-bold me-2">생성날짜:</span><%=data.created_at%>
                </div>
                <div class="mb-3">
                    <span class="fw-bold me-2">수정날짜:</span> <%=data.updated_at%>
                </div>
                <div class="text-center">
                    <button class="btn btn-primary me-3" onclick="location.href='/admin/user/edit/<%= data._id %>'">Edit</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.js"></script>
    
</body>
</html>