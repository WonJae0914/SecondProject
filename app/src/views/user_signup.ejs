    let pw = document.querySelector('#pw').value;
    // let pwChkv = document.querySelector('#pwChk').value;
    let pwChk = document.querySelector('#pwChk');
    pwChk.addEventListener('blur',(e)=>{
      if(pw!=pwChk.value){
        alert('비밀번호가 틀렸습니다.');
        e.preventDefault();
      }
    })

  // })

</script>
</html>