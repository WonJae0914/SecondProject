<%- include('admin_nav.ejs') %>
    <div class="d-flex justify-content-end me-5">
      <input id="val" class="form-control" type="search" placeholder="회원 검색" style="width: 15%;">
      <button id="search" class="btn btn-dark" type="button">Search</button>
    </div>
        <table class="table table-hover w-75 caption-top mb-3" style="margin-left: auto; margin-right: auto;">
          <caption class="mb-3">
            <h2>회원 목록</h2>
          </caption>
          <thead class="table-dark">
            <tr>
              <th scope="col">회원번호</th>
              <th scope="col">아이디</th>
              <th scope="col">이메일</th>
              <th scope="col">탈퇴여부</th>
            </tr>
          </thead>
          <tbody id="post-list">
            <%for(var i=0; i < users.length; i++) {%>
              <tr>
                <th scope="row">
                  <%=users[i]._id%>
                </th>
                <td><a href="/admin/user/detail/<%=users[i]._id%>" style="text-decoration: none;">
                    <%=users[i].id%>
                  </a> </td>
                <td>
                  <%=users[i].email%>
                </td>
                <td> 
                  <%if(users[i].delete===true){%>
                  탈퇴
                  <%}else{%>
                  가입
                  <%}%>
               </td>
              </tr>
              <%}%>
          </tbody>
        </table>
        <nav>
          <ul class="pagination justify-content-center">
            <%if(startPage>1){%>
              <li class="page-item"><a class="page-link" href="<%=startPage-1%>" >prev</a></li>
            <%}%>
            <% if(endPage> total) {%>
            <% max=total%max %>
            <%}%>
            <% for(var i=0; i<max; i++ ) {%>
              <%if(startPage+i===currentPage){%>
              <li class="page-item active"><a class="page-link" href="<%=startPage+i%>">
              <%}else{%>
              <li class="page-item"><a class="page-link" href="<%=startPage+i%>">
              <%}%>
            <%=startPage+i%>
            </a></li>
            <%}%>
            <% if(startPage+max>5) {%>
            <li class="page-item"><a class="page-link" href="<%=startPage+max%>">next</a></li>
            <%}%>
          </ul>
        </nav>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.3.js"></script>
        <script>

          //검색기능
          $('#search').click(function () {
            let put = $('#val').val();
            window.location.href = '/admin/user/search/1?value=' + put
          });
    
          
        </script>
        </body>

        </html>