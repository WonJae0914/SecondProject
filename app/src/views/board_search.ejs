<%- include('head.ejs') %>
<body>
  <%- include('navigation.ejs') %>
    <main>
      <section>
        <%if(questions.length == 0) {%>
          <h3>There are no registered questions</h3>
        <%} else {%> <%for(var question of questions) {%>
        <div class="con-li">
          <div class="con-li__info">
            <h3><a class="title" href="<%=question._id%>/detail">Title : <%=question.title%></a></h3>
            <!-- <h3>Detail : <%=question.detail%></h3> -->
          </div>
          <div class="con-li__util">
            <h4><%=question.createdDate%> / 조회수 <%=question.views%></h4>
            <button class="con-li__btn" type="submit"><a href="<%=question._id%>/detail">detail</a></button>
            <button class="con-li__btn" type="submit"><a href="<%=question._id%>/update">edit</a></button>
            <button class="con-li__btn" type="submit"><a href="<%=question._id%>/delete">delete</a></button>
          </div>
          <br/>
        </div>
        <%}%> <%}%>
      </section>
    </main>
    <%- include('footer.ejs') %>
  </body>
</html>